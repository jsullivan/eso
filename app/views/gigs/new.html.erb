<div class="span-22 prepend-1 append-1">
<h1>New gig</h1>

<% form_for(@gig) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </p>
  <p>
    <%= f.label :venue_id %><br />
    <%= f.text_field :venue_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
<% fields_for :venue do |venue| %>
		<%= venue.label :name %><br />    
		<%= venue.text_field :name %>
  </p>
  <p>
		<%= venue.label :street %><br />
    <%= venue.text_field :street %>
  </p>
  <p>
		<%= venue.label :city %><br />
    <%= venue.text_field :city %>
  </p>
  <p>
		<%= venue.label :state %><br />		
    <%= venue.text_field  :state %>
  </p>
  <p>
		<%= venue.label :zip %><br />
   	<%= venue.text_field  :zip %>
  </p>
  <p>
		<%= venue.label :phone %><br />
    <%= venue.text_field :phone %>
  </p>
  <p>
		<%= venue.label :website %><br />
    <%= venue.text_field :website %>
  </p>
  <p>
<% end %>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', gigs_path %>
</div>